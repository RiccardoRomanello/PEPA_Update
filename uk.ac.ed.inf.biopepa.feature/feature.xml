<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="uk.ac.ed.inf.biopepa"
      label="The Eclipse Bio-PEPA Plug-in"
      version="0.2.4"
      provider-name="The University of Edinburgh">

   <description>
      The Bio-PEPA editor is the ever evolving Eclipse Plug-in for
the Bio-PEPA language. Currently it supports analysis via simulation
or ODEs, but future work will bring support for CTMC analysis
via levels.
   </description>

   <copyright>
      This software is copyright of the University of Edinburgh.
   </copyright>

   <license url="http://www.gnu.org/licenses/gpl-3.0.txt">
      The contents of this feature are released under the GPL.
   </license>

   <url>
      <update label="PEPA Update Site" url="http://groups.inf.ed.ac.uk/pepa/update/"/>
   </url>

   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.views"/>
      <import feature="uk.ac.ed.inf.common.feature" version="0.0.10"/>
      <import plugin="uk.ac.ed.inf.common.ui.plotting"/>
      <import plugin="uk.ac.ed.inf.common.ui.plotview"/>
   </requires>

   <plugin
         id="uk.ac.ed.inf.biopepa.core"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="uk.ac.ed.inf.biopepa.ui"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="uk.ac.ed.inf.biopepa.help"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

</feature>
