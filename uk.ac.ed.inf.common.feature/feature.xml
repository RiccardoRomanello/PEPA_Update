   </requires>

   <plugin
         id="uk.ac.ed.inf.common"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="uk.ac.ed.inf.common.ui"
         download-size="0"
         install-size="0"
